<UserControl x:Class="Acc.Server.Results.Companion.Sessions.SessionPenalties"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Acc.Server.Results.Companion.Sessions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Penalties, RelativeSource={RelativeSource AncestorType={x:Type local:SessionPenalties}}}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Driver"
                                    Binding="{Binding Driver}" />
                <DataGridTextColumn Header="Car"
                                    Binding="{Binding Car}" />
                <DataGridTextColumn Header="Reason"
                                    Binding="{Binding Reason}" />
                <DataGridTextColumn Header="Penalty Code"
                                    Binding="{Binding PenaltyCode}" />
                <DataGridTextColumn Header="Penalty Value"
                                    Binding="{Binding PenaltyValue}" />
                <DataGridTextColumn Header="Violation Lap"
                                    Binding="{Binding ViolationOnLap}" />
                <DataGridTextColumn Header="Cleared Lap"
                                    Binding="{Binding ClearedOnLap}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
